{
    "name": "nk-theme",
    "displayName": "NK Theme",
    "description": "Theme created for my preferences based in famous Monokai Theme.",
    "version": "1.0.0",
    "publisher": "NivekNK",
    "repository": {
        "type": "git",
        "url": "https://github.com/NivekNK/nk-theme"
    },
    "keywords": [
        "monokai",
        "dark theme",
        "niveknk",
        "nk"
    ],
    "categories": [
        "Themes"
    ],
    "contributes": {
        "themes": [
            {
                "label": "NK Theme",
                "uiTheme": "vs-dark",
                "path": "./themes/NK Theme-color-theme.json"
            }
        ],
        "grammars": [
            {
                "path": "./syntaxes/nk-comment-injection.json",
                "scopeName": "nk-comment.injection",
                "injectTo": [
                    "source.cpp"
                ]
            }
        ]
    }
}